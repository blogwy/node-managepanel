<!DOCTYPE html>
<html>
<head>
	<title>添加商品</title>
    
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	
    <!-- bootstrap -->
    <link href="/css/bootstrap/bootstrap.css" rel="stylesheet" />
    <link href="/css/bootstrap/bootstrap-responsive.css" rel="stylesheet" />
    <link href="/css/bootstrap/bootstrap-overrides.css" type="text/css" rel="stylesheet" />

    <!-- global styles -->
    <link rel="stylesheet" type="text/css" href="/css/layout.css" />
    <link rel="stylesheet" type="text/css" href="/css/elements.css" />
    <link rel="stylesheet" type="text/css" href="/css/icons.css" />

    <!-- libraries -->
    <link rel="stylesheet" type="text/css" href="/css/lib/font-awesome.css" />
    
    <!-- this page specific styles -->
    <link rel="stylesheet" href="/css/compiled/new-user.css" type="text/css" media="screen" />

    <!-- open sans font -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css' />

    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" /></head>
<body>

    <!-- navbar -->
    <%- include head.ejs %>
    <!-- end navbar -->

    <!-- sidebar -->
    <%- include left.ejs %>
    <!-- end sidebar -->


	<!-- main container -->
    <div class="content">
        
        <!-- settings changer -->
        <div class="container-fluid">
            <div id="pad-wrapper" class="new-user">
                <div class="row-fluid header">
                    <h3>添加一个商品</h3>
                </div>

                <div class="row-fluid form-wrapper">
                    <!-- left column -->
                    <div class="span9 with-sidebar">
                        <div class="container">
                            <form class="new_user_form inline-input" action="http://localhost:3000/admin/add-shop" method="post" enctype="multipart/form-data" />
                                <div class="span12 field-box">
                                    <label>商品名称:</label>
                                    <input class="span9" name="shopname" id="shopname" type="text" />
                                </div>
                                <div class="span12 field-box">
                                    <label>商品ID:</label>
                                    <input class="span9" name="shopid" id="shopid" type="text" />
                                </div>
                                <div class="span12 field-box">
                                    <label>商品分类:</label>
                                    <div class="ui-select span5">
                                        <select name="shoptype" id="shoptype">
                                            <option value="iphone" />iPhone
                                            <option value="mac" />Mac
                                            <option value="ipad" />iPad
                                            <option value="watch" />Watch
                                            <option value="tv" />TV
                                        </select>
                                    </div>
                                </div>
                                <div class="span12 field-box">
                                    <label>商品图片:</label>
                                    <input class="span9" name="shopimg" id="shopimg" type="file" />
                                </div>
                                <div class="span12 field-box">
                                    <label>商品库存:</label>
                                    <input class="span9" name="shopstock" id="shopstock" type="text" />
                                </div>
                                <div class="span12 field-box">
                                    <label>商品单价:</label>
                                    <input class="span9" name="shopprice" id="shopprice" type="text" />
                                </div>
                                <div class="span12 field-box">
                                    <label>商品容量:</label>
                                    <div class="ui-select span5">
                                        <select name="shopsize" id="shopsize">
                                            <option value="16GB" />16GB
                                            <option value="32GB" />32GB
                                            <option value="64GB" />64GB
                                            <option value="128GB" />128GB
                                            <option value="256GB" />256GB
                                        </select>
                                    </div>
                                </div>
                                <div class="span11 field-box actions">
                                    <button type="submit" class="btn-glow primary">确定</button>
                                    <span>OR</span>
                                    <button class="reset">取消</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- side right column -->
                </div>
            </div>
        </div>
    </div>
    <!-- end main container -->


	<!-- scripts -->
    <script src="http://code.jquery.com/jquery-latest.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/theme.js"></script>
    <script src="/js/js_permiss.js"></script>
    <script type="text/javascript">
        $(function () {
            // toggle form between inline and normal inputs
            var $buttons = $(".toggle-inputs button");
            var $form = $("form.new_user_form");

            $buttons.click(function () {
                var mode = $(this).data("input");
                $buttons.removeClass("active");
                $(this).addClass("active");

                if (mode === "inline") {
                    $form.addClass("inline-input");
                } else {
                    $form.removeClass("inline-input");
                }
            });
        });
    </script>
</body>
</html>